#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scaling---------------#
$scale = 0.3;
$width = 2606*$scale;
$height = 2148*$scale;
		#aspect ratio

#---- Random variables for this problem --------#
$k = random(200,240,5);		#[N/m]
$L = random(3,6,1);		#[m]
$m = random(5,10,1);		#[kg]


#---- Formulas to compute answers --------------#
$coefficient = ($m*9.81*$L/2+8/9*$k*$L**2)/(1/3*$m*$L**2);
$wn = sqrt($coefficient);
$tau = 2*pi/$wn;

