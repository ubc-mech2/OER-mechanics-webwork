#-------------- Image Scaling---------------#
$imgScale = 0.3;

$height = $imgScale * 1589;

$width = $imgScale * 2612;
		#aspect ratio

#---- Random variables for this problem --------#
$r = random(0.5,1.5,0.5);
$m = random(15,30,5);
$M = random(40,60,10);
$k = random(80,120,10);

#---- Formulas to compute answers --------------#
$I = 0.5*$m*$r**2;
$T = 2*pi*sqrt($I/($k*$r**2));

