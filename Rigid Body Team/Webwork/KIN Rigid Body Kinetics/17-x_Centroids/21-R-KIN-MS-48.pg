#######################################################
#Setup

TEXT(beginproblem());


Context("Numeric");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.005,
tolType=>'absolute');  #relative or absolute

#-------------- Image Scaling---------------#
$imgScale = 0.2;
$width = 1925 * $imgScale;
$height = 2369 * $imgScale;

#---- Random variables for this problem --------#

$d_1 = random(0.5,0.8,0.1);
$d_2 = random(0.4,0.7,0.1);
$d_3 = 0.1;
$d_4 = random(0.15,0.3,0.05);

#---- Formulas to compute answers --------------#

$d_5 = ($d_1 - 3*$d_3)/2;

$A_A = $d_2*$d_3;
$A_B = $d_5*$d_3;
$A_C = $d_3*$d_4;
$A_D = $d_5*$d_3;
$A_E = $d_2*$d_3;

$x_A = $d_2/2;
$x_B = $d_3/2;
$x_C = $d_4/2;
$x_D = $d_3/2;
$x_E = $d_2/2;

$y_A = $d_1 - $d_3/2;
$y_B = $d_1 - $d_3 - $d_5/2;
$y_C = $d_1/2;
$y_D = $d_5/2 +$d_3;
$y_E = $d_3/2;

$x = ($x_A * $A_A + $x_B * $A_B +$x_C * $A_C +$x_D * $A_D +$x_E * $A_E)/($A_A + $A_B + $A_C + $A_D + $A_E);

$y = ($y_A * $A_A + $y_B * $A_B +$y_C * $A_C +$y_D * $A_D +$y_E * $A_E)/($A_A + $A_B + $A_C + $A_D + $A_E);




