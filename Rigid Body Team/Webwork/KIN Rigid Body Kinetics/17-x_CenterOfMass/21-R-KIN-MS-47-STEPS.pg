#---- Random variables for this problem --------#

$b = random(10,22,1);
$a = random(5,10,1); 
$b = 15;
$a = 7;
#---- Formulas to compute answers --------------#

$x_bar = 0;
$y_bar = 0;
$r = sqrt($b**2 / $a);
$m_cone = (1/3*pi*$r*$r*$b)*160;
$z_cone = 3/4*$b;
$z_scoop = 3/8*$r+$b;
$m_scoop = 2/3*pi*$r**3*727;
$z_bar = ($z_cone * $m_cone + $z_scoop * $m_scoop)/($m_cone+$m_scoop);

