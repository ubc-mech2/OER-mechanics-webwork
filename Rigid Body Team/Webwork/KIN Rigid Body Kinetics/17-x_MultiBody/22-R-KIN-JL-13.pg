$height = $imgScale*889;
		#aspect ratio

#---- Random variables for this problem --------#
$mus = random(0.25,0.4,0.05);
$muk = $mus- 0.1/(random(1,2,1));

$h1 = random(0.2,0.4,0.1);
$h2 = random(0.8,1.1,0.1);
$w = 0.4;

$mA = random(10,12,0.5);
$mB = random(8,10,0.5);


#---- Formulas to compute answers --------------#
$T = $mus*$mA*9.81;
$P = $mus*$mB*9.81 + $T;

