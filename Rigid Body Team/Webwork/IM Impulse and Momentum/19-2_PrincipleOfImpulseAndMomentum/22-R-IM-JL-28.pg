#
#Setup

TEXT(beginproblem());

Context("Numeric");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scaling---------------#
$scale = 0.3;
$width = 466*$scale;
$height = 385*$scale;
		#aspect ratio

#---- Random variables for this problem --------#
$r = random(8,20,1);	#[cm]
$r_meters = $r/100;
$m = random(200,800,100);	#[g]
$m_kg = $m/1000;
$k = random(20,36,1);	#[cm]
$k_meters = $k/100;
$T = random(3,4,0.1);	#[J]

#---- Formulas to compute answers --------------#
$I_G = $m_kg*$k_meters**2;
$I_O = $I_G + $m_kg*4*$r_meters**2;

$w = sqrt(2*$T/$I_O);

$L = -$m_kg*4*$r_meters**2*$w;
$H_G = $I_G*$w;
$H_O = $I_O*$w;

########################################################
