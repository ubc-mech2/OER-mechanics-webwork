#
#Setup

TEXT(beginproblem());

Context("Numeric");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scaling---------------#
$width = 466;
$height = 385;
		#aspect ratio

#---- Random variables for this problem --------#
$w1 = random(1,4,0.2);		#[rad/s]
$w2 = random(3,5,0.2);		#[rad/s]
$w3 = random(2,5,0.3);		#[rad/s]

$r = random(30,65,5);		#[cm]
$L = random(50,90,2);		#[cm]
$d = random(40,70,3);		#[cm]

$m1 = random(600,940,20);	#[g]
$m2 = random(350,510,15);	#[g]
$m3 = random(480,720,30);	#[g]

#---- Formulas to compute answers --------------#
$HG1 = -0.5*$m1/1000*($r/100)**2*$w1;
$HO1 = -(0.5*$m1/1000*($r/100)**2 + $m1/1000*($r/100)**2)*$w1;

$HG2 = -1/12*$m2/1000*($L/100)**2*$w2;
$HO2 = -1/3*$m2/1000*($L/100)**2*$w2;

$HG3 = 1/12*$m3/1000*($d/100)**2*$w3;
$HO3 = (1/12*$m3/1000*($d/100)**2 + $m3/1000*($d/400)**2)*$w3;

