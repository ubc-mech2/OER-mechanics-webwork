##############################################################
#
#Setup

TEXT(beginproblem());

Context("Numeric");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scaling---------------#
$scale = 0.3;
$width = 2322*$scale;
$height = 1766*$scale;
		#aspect ratio

#---- Random variables for this problem --------#
$d1 = random(2,3,0.5);		#[m]
$d = random(0.4,0.55,0.05);	#[m]
$r = random(0.2,0.4,0.1);	#[m]
$k = random(40,80,10);		#[N/m]
$theta = random(30,60,5);	#[deg]
$t_rad = $theta/180*pi;		#[rad]
$uL = $d1 - 0.4;		#[deg]
$v = random(2.25,3,0.25);	#[m/s] 


#---- Formulas to compute answers --------------#
$m = $k*(($d1 + $d - $uL)**2 - ($d1 - $uL)**2)/(2*(3/4*$v**2 + 9.81*$d*sin($t_rad)));


########################################################
