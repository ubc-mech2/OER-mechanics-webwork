#Setup

TEXT(beginproblem());

Context("Numeric");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scaling---------------#
$scale = 0.3;
$width = 2625*$scale;
$height = 1658*$scale;
		#aspect ratio

#---- Random variables for this problem --------#
$d = random(2,3,0.5);		#[m]
$m = random(16,20,2);		#[kg]
$L1 = random(3,4,0.5);		#[m]
$L2 = random(8,10,1);		#[m]
$uL = random(2.6,3,0.1);	#[deg]
$v = random(2,3,0.25);		#[m/s]


#---- Formulas to compute answers --------------#
$L_spring1 = sqrt($L1**2+$d**2/4);
$Vg1 = $m*9.81*$L1;  #not used

$L_spring2 = sqrt($L2**2+$d**2/4);
$Vg2 = $m*9.81*$L2;  #not used

$k = 2*$m*($v**2/2+9.81*($L1-$L2))/(($L_spring1-$uL)**2-($L_spring2-$uL)**2);


