Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scaling---------------#
$imgScale = 0.8;

$height = $imgScale * 447;

$width = $imgScale * 560;
		#aspect ratio

#---- Random variables for this problem --------#
$v = random(0.5,2,0.5);
$r = random(5,20,5);
$d = random(0.5,1,0.5);

#---- Formulas to compute answers --------------#
$angVel = $v/($r+$d)*100;
$v_max = $angVel*(2*$r+$d)/100;


