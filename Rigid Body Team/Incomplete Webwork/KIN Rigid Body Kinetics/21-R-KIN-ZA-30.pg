##############################################################
#
# Setup
#
#

Context("Numeric");
#given
$theta = 30;
$mu = 0.3;
$r = random(0.8,1.2,0.05);
$m = random(10,14,1);

#computation for numerical answer
$thetar = $theta*pi/180;
$g = 9.81;
$l = $r*sin($thetar);
$Ig = 1/12*$m*$l**2;
$y = $l/2*sin($thetar);
$x = $l/2*cos($thetar);
$alpha = [ (-1*$mu*$m*$g*$y) + ($m*$g*$x) - ($mu*$m*$g*$y) ]/[$Ig + ($mu*$m*$x) - ($m*$x**2) + ($m*$y**2) + ($mu*$m*$x*$y) ];
$agx = $alpha*$y;
$agy = $alpha*$x;

#image settings
$resolution = 0.2;
$width = $resolution*1208;
$height = $resolution*1036;

#set tolerance
Context()->flags->set(
tolerance=>.03,
tolType=>'relative');

##############################################################
