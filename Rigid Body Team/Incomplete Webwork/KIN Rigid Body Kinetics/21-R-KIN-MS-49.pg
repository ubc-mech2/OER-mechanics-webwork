#-------------- Image Scaling---------------#
$imgScale = 0.2;
	#aspect ratio

#---- Random variables for this problem --------#

$r_1 = random(7,15,1);
$r_2 = random(17,20,1);
$r_3 = random(7,15,1);
$r_4 = random(20,30,1);
$h_1 = 1;
$h_2 = random(30,50,1);
$h_3 = 1;
$rho_p = 941/1000;
$rho_s = 8050/1000;
$rho_w = 1200/1000;

#---- Formulas to compute answers --------------#

$z_a = $h_3/2;
$z_b = $h_2/4 + $h_3;
$z_c = $h_3 + $h_2 + $h_1/2;
$z_d = $h_3 + $h_2 + $h_1 + $r_1;

$m_a = pi * $r_4**2 * $h_3 * $rho_w;
$m_b = 1/3 * pi * $r_3**2 *$h_2 * $rho_p;
$m_c = pi*$r_2**2 *$h_1 * $rho_p;
$m_d = 4/3 * pi*$r_1**3*$rho_s;

$x = 0;

$y = 0;

$z = ($z_a*$m_a + $z_b*$m_b + $z_c*$m_c + $z_d*$m_d)/($m_a+$m_b+$m_c+$m_d);


