##############################################################
#
# Setup
#
#

Context("Numeric");
#given
$l = random(1,1.5,0.05);
$m = random(10,15,0.1);
$tinit = random(10,15,0.1);
$t = random(30,35,0.1);
$ag = random(0.3,0.5,0.05);

#computation for numerical answer
$g = 9.81;
$tr = $t*pi/180;
$Nb = $m*$g;
$Na = [ (-1*$m*$ag*$l/2*sin($tr)) + ($m*$g*$l/2*cos($tr)) ]/[$l*sin($tr)];
$Fb = $Na + ($m*$ag);
$mu = $Fb/$Nb;

$tinitr = $tinit*pi/180;
$Nb2 = $m*$g;
$Fb2 = $mu*$Nb2;
$Na2 = (-1*$m*$ag)+$Fb2;
$Mg = $l/2*[ ($Nb2*cos($tinitr)) - ($Na2*sin($tinitr)) - ($Fb2*sin($tinitr)) ];
$Ig = 1/12*$m*$l**2;
$alpha = $Mg/$Ig;

#image settings
$resolution = 0.2;
$width = $resolution*1988;
$height = $resolution*1161;

#set tolerance
Context()->flags->set(
tolerance=>.03,
tolType=>'relative');

