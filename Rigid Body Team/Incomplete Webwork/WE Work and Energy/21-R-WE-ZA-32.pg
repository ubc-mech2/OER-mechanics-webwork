##############################################################
#
# Setup
#
#

Context("Numeric");
#given
$moa = random(6,9,0.5);
$mcb = random(2,5,0.5);
$md = random(10,15,0.5);
$lc = random(0.5,1,0.05);
$lo = random(1.05,1.5,0.01);
$s = random(2,4,0.5);
$M = random(6,9,1);
$omegao0 = random(1,5,0.5);
$r = $lo-$lc;

#computation for numerical answer
$Io = 1/3*$moa*$lo**2;
$Ic = 1/3*$mcb*$lc**2;
$UM = $M/2*( (pi/2)**2 - (pi/4)**2 );
$omegac0 = $omegao0*$lo/$lc;
$T1 = (0.5*$Io*$omegao0**2) + (0.5*$Ic*$omegac0**2) + (0.5*$md*($omegao0*$lo)**2);
$V = ( $moa*9.81*(cos(pi/4)-1) ) + ($mcb*9.81* ($lc/2*(cos(pi/4)-1)+$r) ) + ($md*9.81*(($lo*cos(pi/4)+($s/2))-($lo+($s/2))));
$omegao = [ ($T1+$V+$UM)*2/( $Io + ($Ic*($lo/$lc)**2) + ($md*$lo**2)) ]**0.5;
$omegac = $omegao*$lo/$lc;

#image settings
$resolution = 0.2;
$width = $resolution*974*2;
$height = $resolution*933*2;

#set tolerance
Context()->flags->set(
tolerance=>.03,
tolType=>'relative');

