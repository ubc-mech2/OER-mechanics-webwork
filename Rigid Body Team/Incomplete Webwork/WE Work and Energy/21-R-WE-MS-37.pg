tolerance=>.005,
tolType=>'absolute');  #relative or absolute

#-------------- Image Scaling---------------#
$imgScale = 0.2;
	#aspect ratio

#---- Random variables for this problem --------#

$m1 = random(10,20,5);
$L = random(0.4,0.6,0.1);
$m2 = random(3,7,1);
$R = random(0.1,0.2,0.01);
$k = random(50,250,50);
$x0 = random(30,70,10);

#---- Formulas to compute answers --------------#

$g = 9.81;


$Efkin_omega2 = 1/2*(1/2*$m2*$R**2) + 1/2*$m1*($L/2)**2 + 1/2*1/12*$m1*$L**2;
$Efpot = 1/2*$k*(pi/2*$R)**2-$m1*9.81*1/2*$L;

$omega = sqrt(-$Efpot/$Efkin_omega2);

