##############################################################
#
# Setup
#
#

Context("Numeric");
#given
$ra = random(0.6,1,0.05);
$rb = random(0.1,0.5,0.05);
$mball = random(0.05,0.1,0.01);
$mb = random(1,5,0.5);
$rev = random(2,5,1);
$T = 10;
$M = random(0.001,0.005,0.001);

#computation for numerical answer
$thetab = $rev*2*pi*$ra/$rb;
$Ib = 0.5*$mb*$rb**2;
$Mb = $M*( ($thetab**3)/3+$thetab );
$omegab = ( $Mb*2/$Ib )**0.5;
$omegaa = $omegab*$rb/$ra;
$sa = $rev*2*pi*$ra;
$Fb = [ ($sa*(($mball*9.81)+$T)) - (0.5*$mball*($ra*$omegaa)**2)]/$sa;

#image settings
$resolution = 0.2;
$width = $resolution*741*2;
$height = $resolution*1062*2;

#set tolerance
Context()->flags->set(
tolerance=>.03,
tolType=>'relative');

