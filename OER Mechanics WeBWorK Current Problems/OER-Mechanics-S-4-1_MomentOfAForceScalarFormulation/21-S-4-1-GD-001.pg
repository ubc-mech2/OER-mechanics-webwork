	#"source.pl",        # allows code to be displayed on certain sites.
	#"PGcourse.pl", 	 # Customization file for the course
   	);
	 
TEXT(beginproblem());

##############################################################
#
#  Setup
#
#

Context("Numeric");
#given
$F = random(250, 350, 25);
$thetadeg = random(15, 30, 5);
$thetarad = $thetadeg*(pi/180);
$d = random(0.25, 0.75, 0.25);


#computation
$M = $F*sin($thetarad)*$d;


$imagescale = 0.3;
$width = $imagescale*2839;
$height = $imagescale*2027;
#set tolerance
Context()->flags->set(
tolerance=>.05,
tolType=>'relative');

##############################################################
#
#  PGML 
#
#

BEGIN_PGML

A mechanic is applying torque to a bolt using a [`[$d]`] [`m`] wrench. The mechanic is applying [`[$F]`] [`N`] at [`[$thetadeg]`] [`degrees`] from the wrench. What is the magnitude of the moment on the bolt?


[@ image( "21-S-4-1-GD-001.png", width=>[$width], height=>[$height]) @]*


[`M_O =`]  [_____]{"$M"}[`Nm`]

END_PGML

