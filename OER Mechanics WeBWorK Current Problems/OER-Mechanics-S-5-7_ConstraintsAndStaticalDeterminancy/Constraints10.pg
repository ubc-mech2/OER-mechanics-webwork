"Force in x$BR",
"Force in y$BR",
"Moment about x$BR",
"Moment about z"
);

BEGIN_TEXT
\{ $mc -> print_q() \}
$PAR 
\{ image( "220Constraints-9-10.png", width=>400, height=>293 ) \}
$PAR
\{ $mc -> print_a() \}

END_TEXT

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS( checkbox_cmp( $mc->correct_ans() ) );

