#Setup

TEXT(beginproblem());

Context("Matrix");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scale---------------#
$imgScale =0.35;


#-------------- Image Aspect Ratio---------------#
$width = $imgScale*1500;
$height = $imgScale*818;


#---- Provided --------#
# random(lower, upper, stepsize)

$fc = random(1,5,1);
$fd = random(1,10,1);
$d1 = random(1,5,1);
$d2 = $d1 + 2;


#-----Calculations------#

#---Reaction Forces----
$Ey = ($fc*$d2*2 + $fd*$d2*3) / ($d2*4);
$Ay = $fd + $fc - $Ey;

#---Similar triangles---
$x = $d2 * $d2 / $d1;

#---moments around o---
$Fcf = ($fd * $x - $Ey * ($x-$d2)) / (($x + $d2) * sin(45*pi/180)) ;


$mfcf = RadioButtons([ "Tension", "Compression", "None of the above" ], "Compression");

######################################################
#PGML

BEGIN_PGML

[@ image( "21-S-6.4-MK-01.png", width=>[$width], height=>[$height]) @]*

