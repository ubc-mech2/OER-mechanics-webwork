[`T_{A}`] = [___]{"$Ta"} [`\textrm{lb}`]


[`T_{B}`] = [___]{"$Tb"} [`\textrm{lb}`]


[`T_{C}`] = [___]{"$Tc"} [`\textrm{lb}`]

