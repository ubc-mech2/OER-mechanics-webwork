#Setup

TEXT(beginproblem());

Context("Matrix");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scale---------------#
$imgScale =0.35;


#-------------- Image Aspect Ratio---------------#
$width = $imgScale*1300;
$height = $imgScale*1056;


#---- Provided --------#
# random(lower, upper, stepsize)

$W = random(100,900,100);
$F = 200;

#Distance from x'
$Ax = 0;
$Bx = 3;
$Cx = 0;
$Fx = 0;
$Wx =$Bx/2;

#Distance from y'
$Ay = 4;
$By =0;
$Cy = 0;
$Fy = $Ay/2;
$Wy = $Fy;


#---- Formulas to compute answers --------------#

#sum of moments around x'
$Tb = $W * $Wx / $Bx;

#sum around y'
$Ta = ($F * $Fy + $W * $Wy) / $Ay;

#sum of forces
$Tc = $W + $F - $Ta - $Tb;


