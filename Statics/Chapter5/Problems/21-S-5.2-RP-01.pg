#
#Setup

TEXT(beginproblem());

$showPartialCorrectAnswers = 0;

Context("Numeric");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scaling---------------#
$imgScale = 0.18;

$height = $imgScale*2768;

$width = $imgScale*2239;
		#aspect ratio

#---- Setting up multiple choices -----------------#
$mcA = new_checkbox_multiple_choice();
$mcA -> qa( "Point `A`", "`A_x`" );
$mcA -> makeLast( "`A_x`", "`A_y`" );

$mcB = new_checkbox_multiple_choice();
$mcB -> qa( "Point `B`", "`B_y`" );
$mcB -> makeLast( "`B_x`", "`B_y`" );

$mcC = new_checkbox_multiple_choice();
$mcC -> qa( "Point `C`", "`C_x`" );
$mcC -> makeLast( "`C_x`", "`C_y`" );

$mcD = RadioButtons([ "Yes", "No" ], "No");

$mcE = new_checkbox_multiple_choice();
$mcE -> qa( "`A_x`", "`= 0`", "`\lt 0`", "`\gt 0`" );
$mcE -> makeLast( "`= 0`", "`\lt 0`", "`\gt 0`" );

$mcF = new_checkbox_multiple_choice();
$mcF -> qa( "`A_y`", "`= 0`" );
$mcF -> makeLast( "`= 0`", "`\lt 0`", "`\gt 0`" );

$mcG = new_checkbox_multiple_choice();
$mcG -> qa( "`B_x`", "`= 0`" );
$mcG -> makeLast( "`= 0`", "`\lt 0`", "`\gt 0`" );

$mcH = new_checkbox_multiple_choice();
$mcH -> qa( "`B_y`", "`= 0`", "`\gt 0`" );
$mcH -> makeLast( "`= 0`", "`\lt 0`", "`\gt 0`" );

$mcI = new_checkbox_multiple_choice();
$mcI -> qa( "`C_x`", "`= 0`", "`\lt 0`" );
$mcI -> makeLast( "`= 0`", "`\lt 0`", "`\gt 0`" );

$mcJ = new_checkbox_multiple_choice();
$mcJ -> qa( "`C_y`", "`= 0`" );
$mcJ -> makeLast( "`= 0`", "`\lt 0`", "`\gt 0`" );

#---- Answers to the problem -----------------------#

