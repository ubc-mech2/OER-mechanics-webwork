#Setup

TEXT(beginproblem());

Context("Numeric");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.03,
tolType=>'relative');  #relative or absolute

#-------------- Image Scale---------------#
$imgScale =0.35;


#-------------- Image Aspect Ratio---------------#
$width = $imgScale*1003;
$height = $imgScale*1056;


#---- Provided --------#
# random(lower, upper, stepsize)

$TensionA = random(300,500,20);  
$angleBC = random(10,60,5);
$angleBA = atan(3/4);
$gravity = 9.81;


#---- Formulas to compute answers --------------#

$radsBC=$angleBC*pi/180;
$TensionAy = $TensionA*sin($angleBA);
$TensionAx = $TensionA*cos($angleBA);
$TensionCx = $TensionAx;
$TensionCy = $TensionCx*tan($radsBC);
$Mass = ($TensionCy+$TensionAy)/$gravity;

#For Troubleshooting
#[`1=`][___]{"$TensionAy"} 
#[`2=`][___]{"$TensionAx"}
#[`3=`][___]{"$TensionCx"} 
#[`4=`][___]{"$TensionCy"} 
########################################################
#PGML

BEGIN_PGML	

