#-------------- Image Scale---------------#
$imgScale =0.35;


#-------------- Image Aspect Ratio---------------#
$width = $imgScale*1003;
$height = $imgScale*1056;


#---- Provided --------#
# random(lower, upper, stepsize)

$ax = 2;
$ay = 3;
$az = 4;

#---- Formulas to compute answers --------------#

$mag = ($ax**2+$ay**2+$az**2)**0.5; 

$alpha = acos($ax/$mag)*180/pi;
$beta = acos($ay/$mag)*180/pi;
$gamma = acos($az/$mag)*180/pi;

$ux = $ax/$mag;
$uy = $ay/$mag;
$uz = $az/$mag;

$phir = acos($az/$mag);
$thetar = acos($ax/($mag*sin($phir)));
$phi = ($phir)*180/pi;
$theta = ($thetar)*180/pi;

