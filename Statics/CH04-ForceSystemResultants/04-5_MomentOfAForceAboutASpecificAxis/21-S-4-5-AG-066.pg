Context("Numeric");
#given
$D_in = random(3,15,1);
$D_ft = $D_in / 12;
$x = random(1,5,1);
$y = random(1,5,1);
$z = random(1,5,1);

#computation for numerical answer
$mx = -$D_ft*$y;
$my = $D_ft*$x;
$mz = 0;

#set tolerance
Context()->flags->set(
tolerance=>.03,
tolType=>'relative');

