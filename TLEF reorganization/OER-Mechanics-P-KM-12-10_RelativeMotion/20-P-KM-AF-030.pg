##############################################################
#
#  Setup
#
#


Context("Numeric");
#given
$A = random(2, 10, 1);
$B = random(2, 10, 1);
$C = random(10, 15, 1);
$D = random(10, 15, 1);
$E = random(10, 15, 1);
$F = random(10, 15, 1);
$G = random(10, 15, 1);
$H = random(30, 40, 1);

#computation

#basic calculations
$ra = sqrt($C) + 30/4;
$rb = sqrt($C) + 10/4;
$thetaa = ($G +$H)*pi/180;
$thetab = $G*pi/180;
$tthetaa = 90*pi/180 - $thetaa;
$tthetab = 90*pi/180 - $thetab;

#relative velocity calculations
$vabx = -$A*cos($thetaa) + $B*cos($thetab);
$vaby = -$A*sin($thetaa) + $B*sin($thetab);

#acceleration calculations
$ata = $F;
$atb = $D;
$ana = ($A)**2/$ra;
$anb = ($B)**2/$rb;

$aax = $ata*cos($thetaa) + $ana*sin($thetaa);
$aay = $ata*sin($thetaa) - $ana*cos($thetaa);

$abx = -$atb*cos($thetab) + $anb*sin($thetab);
$aby = -$atb*sin($thetab) - $anb*cos($thetab);

$aabx = $aax - $abx;
$aaby = $aay - $aby;

$width = 350;
$height = 300;
#set tolerance
Context()->flags->set(
tolerance=>.03,
tolType=>'relative');

