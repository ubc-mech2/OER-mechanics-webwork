TEXT(beginproblem());

Context("Numeric");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scaling---------------#
$scale = 0.3;
$width = 1989*$scale;
$height = 1593*$scale;
		#aspect ratio

#---- Random variables for this problem --------#
$alphaC = 4;
$omegaC = 5;
$FB = random(5,6,1);
$r = 0.4;
$d1 = 3;
$mRod = random(8,9,1);

$d2 = sqrt($d1**2 + (2*$r)**2);

#---- Formulas to compute answers --------------#
$IG = 1/12*$mRod*$d2**2;
$alphaAB = ($omegaC)**2*$r/$d1;
$aGx = 2*$alphaC*$r+$alphaAB*$r;
$aGy = $alphaAB*$d1/2-$omegaC**2*$r;
$Ax = $mRod*$aGx-$FB;
$Ay = 0.5*($mRod*$aGy+$mRod*9.81-2*($IG*$alphaAB + ($Ax -$FB)*$r)/$d1);


