DOCUMENT();


loadMacros(   
	"PGstandard.pl",     # Standard macros for PG language
	"MathObjects.pl",
	"PGML.pl",
	"parserPopUp.pl",
	"parserMultiAnswer.pl",
	"parserRadioButtons.pl",
	"PGchoicemacros.pl",
	"PGessaymacros.pl",
	#"source.pl",        # allows code to be displayed on certain sites.
	#"PGcourse.pl", 	 # Customization file for the course
   	);

TEXT(beginproblem());

##############################################################
#
#  Setup
#
#

Context("Vector");

$A1 = random(1,5,1);
$A2 = random(1,5,1);
$A3 = random(1,5,1);
$B1 = random(1,5,1);
$B2 = random(1,5,1);
$B3 = random(1,5,1);
$D1 = random(1,5,1);
$D2 = random(1,5,1);
$D3 = random(1,5,1);

#given
$A = Vector($A1,$A2,$A3);
$B = Vector($B1,$B2,$B3);
$D = Vector($D1,$D2,$D3);

#computation for answer
$ans1 = $B + $D;
$ans2 = $A x $ans1;
$ans3 = $A x $B;
$ans4 = $A x $D;
$ans5 = $ans3 + $ans4;

$mc1 = RadioButtons(["Yes","No"],"Yes");

#set tolerance
Context()->flags->set(
tolerance=>.03,
tolType=>'relative');

##############################################################

Context()->normalStrings;
BEGIN_TEXT
This exercise is meant to prove the distributive law.
$BR
Given Cartesian vectors \(\textbf{A}=$A\), \(\textbf{B}=$B\), and \(\textbf{D}=$D\), find:
$BR
END_TEXT
   
Context()->texStrings;
BEGIN_TEXT
\(\textbf{B}+\textbf{D}\) = \{$ans1->ans_array\}
$BR
END_TEXT
Context()->normalStrings;
ANS($ans1->cmp);

BEGIN_TEXT
\(\textbf{A}{\times}(\textbf{B}+\textbf{D})\) = \{$ans2->ans_array\}
$BR
END_TEXT
Context()->normalStrings;
ANS($ans2->cmp);

BEGIN_TEXT
\(\textbf{A}{\times}\textbf{B}\) = \{$ans3->ans_array\}
$BR
END_TEXT
Context()->normalStrings;
ANS($ans3->cmp);

BEGIN_TEXT
\(\textbf{A}{\times}\textbf{D}\) = \{$ans4->ans_array\}
$BR
END_TEXT
Context()->normalStrings;
ANS($ans4->cmp);

BEGIN_TEXT
\(\textbf{A}{\times}\textbf{B}+\textbf{A}{\times}\textbf{D}\) = \{$ans5->ans_array\}
$BR
END_TEXT
Context()->normalStrings;
ANS($ans5->cmp);

BEGIN_TEXT
$BR
Is \(\textbf{A}{\times}(\textbf{B}+\textbf{D})\) equal to \(\textbf{A}{\times}\textbf{B}+\textbf{A}{\times}\textbf{D}\)?
$BR
\{$mc1->buttons()\}
END_TEXT
ANS( $mc1->cmp() );

BEGIN_PGML_SOLUTION

[@ image( "21-S-4-2-AG-062.pdf", width=>[0], height=>[0]) @]*

END_PGML_SOLUTION

