Context("Numeric");
#given
$m = random(1,5,0.25);
$k = random(50,100,2);
$l = random(3,7,0.25);
$g = 9.81;

#computation for answer
$x = $m*$g/$k;

#image settings
$resolution = 0.7;
$width = $resolution*653;
$height = $resolution*942;

#set tolerance
Context()->flags->set(
tolerance=>.03,
tolType=>'relative');

