#Setup

TEXT(beginproblem());

Context("Numeric");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scaling---------------#
$scale = 0.35;
$width = 2569*$scale;
$height = 1303*$scale;
		#aspect ratio

#---- Random variables for this problem --------#
$k = random(60,80,2);		#[N/m]
$m = random(5,9,0.5);		#[kg]
$L1 = random(2,2.2,0.1);	#[m]
$L2 = random(2.2,2.5,0.1);	#[m]
$theta_i = random(15,27,3);	#[deg]
$theta_i_rad = $theta_i*pi/180;
$theta_f = random(80,92,3);	#[deg]
$theta_f_rad = $theta_f*pi/180;


#---- Formulas to compute answers --------------#
$L_spring1 = sqrt($L1**2+$L2**2-2*$L1*$L2*cos(pi-$theta_i_rad));
$Vg1 = $m*9.81*$L2*sin($theta_i_rad)/2;
$Ve1 = $k/2*($L_spring1-$L1)**2;
$V1 = $Vg1 + $Ve1;

$L_spring2 = sqrt($L1**2+$L2**2-2*$L1*$L2*cos(pi-$theta_f_rad));
$Vg2 = $m*9.81*$L2*sin($theta_f_rad)/2;
$Ve2 = $k/2*($L_spring2-$L1)**2;
$V2 = $Vg2 + $Ve2;

$w = sqrt(2*($V1-$V2)/($m/3*$L2**2));


