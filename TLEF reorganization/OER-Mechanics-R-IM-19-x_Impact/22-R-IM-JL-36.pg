#---- Random variables for this problem --------#
$r_cm = random(60,95,5);
$r = $r_cm/100;

$h_cm = random(10,20,1);
$h = $h_cm/100;

$k_cm = 1.2 * $r_cm;
$k = $k_cm/100;

$m = random(340,380,10);
$w2 = random(2.1,4.4,0.1);


#---- Formulas to compute answers --------------#
$w1 = $w2*($k**2 + $r**2)/($r*($r-$h+$k**2/$r)); 	#[rad/s]

