#
#Setup

TEXT(beginproblem());

Context("Numeric");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scaling---------------#
$imgScale = 0.4;

$height = $imgScale * 1642;

$width = $imgScale * 1160;
		#aspect ratio

#---- Random variables for this problem --------#
$l = random(30,40,5);
$w = random(2,4,2);
$d = random(2,3,1);
$density = 7.6;       #g/cm^3
$thickness = random(1.5,2.5,0.5);

#---- Formulas to compute answers --------------#
$surfDensity = $density*$thickness;
$r = 0.5*(8-$w);
$Lrod = $l+2*$r-$d;
$yRod = $Lrod/2;
$yCirc = $l+$r;
$mRod = $surfDensity*$Lrod*$w;
$mCirc = $surfDensity*pi*$r**2;
$yCM = ($yRod*$mRod+$yCirc*$mCirc)/($mRod+$mCirc);
$xCM = 4;

$IGCirc = 0.25*$mCirc*$r**2-0.5*$mCirc*16*$r**2/(9*pi**2);
$dCirc = sqrt(($w/2+4*$r/(3*pi))**2+($yCirc-$yCM)**2);
$ICirc = ($IGCirc+0.5*$mCirc*$dCirc**2)/1000;
$IRod = ((1/12)*$mRod*($Lrod**2+$w**2)+$mRod*($yCM-$yRod)**2)/1000;
$I = 2*$ICirc+$IRod;


