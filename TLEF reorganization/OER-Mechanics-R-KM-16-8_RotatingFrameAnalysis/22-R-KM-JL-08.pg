#Setup

TEXT(beginproblem());

Context("Numeric");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scaling---------------#
$width = 552;
$height = 558;
		#aspect ratio

#---- Random variables for this problem --------#
$d = random(1000, 1200, 1600);	#[km]
$rAB = ($d - 400)/2;		#[km]
$theta = 45;		 	#[deg]
$vB = random(400, 440, 480);	#[km/s]
$aB = random(60, 80, 100);	#[km/s^s]
$vA = random(180, 200, 220);	#[km/s]
$aA = random(50, 60, 70);	#[km/s^s]


#---- Formulas to compute answers --------------#
$vBi = 0;			#[km/s]	
$vBj = $vB;			#[km/s]
$aBi = $vB**2/$d;		#[km/s^2]
$aBj = $aB;			#[km/s^2]
$vAi = -$vA/sqrt(2);		#[km/s]
$vAj = -$vA/sqrt(2);		#[km/s]
$aAi = -$aA/sqrt(2);		#[km/s^2]
$aAj = -$aA/sqrt(2);		#[km/s^2]
$omega = -$vB/$d;		#[rad/s]
$omegaDot = -$aB/$d;		#[rad/s^2]

$vABi = $vAi - $vBi;				#[km/s]
$vABj = $vAj - $vBj - $omega*$rAB;		#[km/s]

$aABi = $aAi - $aBi + ($omega**2)*$rAB + 2*($omega*$vABj);	#[km/s^2]
$aABj = $aAj - $aBj - ($omegaDot*$rAB) - 2*($omega*$vABi);	#[km/s^2]


