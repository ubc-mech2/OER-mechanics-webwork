#Setup

TEXT(beginproblem());

Context("Numeric");		# or Complex

#---------------Tolerance------------------#
Context()->flags->set(
tolerance=>.02,
tolType=>'relative');  #relative or absolute

#-------------- Image Scaling---------------#
$scale = 0.3;
$width = 2101*$scale;
$height = 1946*$scale;
		#aspect ratio

#---- Random variables for this problem --------#
$kG = random(2,3,1);		#[m]
$m = random(200,280,20);	#[kg]
$w = random(3,5,1);		#[rad/s]
$wf = random(8,11,1);
$coefficientA = random(3,4,1);	
$coefficientB = random(1,2,1);
$theta = random(2,3,1);		#[rev]


#---- Formulas to compute answers --------------#
$alpha = ($wf**2-$w**2)/(2*$theta*2*pi);
$M = $m*$kG**2*$alpha/1000;

$U = $M*($theta*2*pi);


